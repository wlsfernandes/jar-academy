{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "runtimeArgs": [
                "-S",
                "127.0.0.1:8000",
                "-t",
                "/var/www/html/jar-academy/public"
            ],
            "pathMappings": {
                "/var/www/html/jar-academy/public": "${workspaceFolder}/public"
            }
        }
    ],
}
